@using IssuesSystem.BL.View;
@using IssuesSystem.DAL;
@model UpdateVM;

<div class="card" style="width: 50vw;">
    <div class="card-body">
        <form asp-action="Edit" method="post">

            <div class="form-group">
                <label asp-for="id"></label>
                <input type="hidden" class="form-control" asp-for="@Model.id" />
            </div>

            <div class="form-group">
                <label asp-for="title"></label>
                <input class="form-control" asp-for="@Model.title" />
            </div>

            <div class="form-group">
                <label asp-for="sev"></label>
                <select asp-for="@Model.sev" asp-items="Html.GetEnumSelectList<Severity>()"></select>
            </div>

            <div class="form-group">
                <label asp-for="desc"></label>
                <input class="form-control" asp-for="@Model.desc" />
            </div>

         
            <button class="btn btn-success"> Apply </button>
        </form>
    </div>
</div>
